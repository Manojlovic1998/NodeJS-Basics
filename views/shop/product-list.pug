extends ../layouts/main-layout.pug
block content 
    main.container.py-5 
        .row 
            if products.length > 0
                .col-12 
                    h1 My Product
                    p List of all products:
                each product in products 
                    .col-lg-3.col-md-4.col-12.mx-md-auto.bg-white.rounded.shadow.d-flex.flex-column
                        img(src=(product.imageUrl) alt=(product.title)).img-fluid
                        div.d-flex.justify-content-between.align-items-center.mt-3.mb-3
                            h2.m-0 #{product.title}
                            p.m-0 #{product.price} $
                        p #{product.description}
                        div.pt-2.pb-3.d-flex.justify-content-center
                            div
                                a(href="/products/" + product.id).btn.btn-outline-primary.me-2 Details
                                form(action="/add-to-cart" method="POST").d-inline-block.ms-2 
                                    button(type="submit").btn.btn-outline-success Add To Cart
            else
                h1 No Products