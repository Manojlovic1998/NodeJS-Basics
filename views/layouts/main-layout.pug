doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        //- Bootstrap CDN Import
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        //- Custom CSS
        link(rel="stylesheet" href="css/index.css")
        block styles
    body
        header
            nav.navbar.navbar-expand-lg.bg-light
                .container
                    a(href="/").navbar-brand NodeJS Basics
                    button(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation").navbar-toggler
                        span.navbar-toggler-icon
                    div.collapse.navbar-collapse.d-lg-flex#navbarNavDropdown
                        ul.navbar-nav.ms-auto
                            li.nav-item
                                a(href="/" class=((path === "/") ? "active nav-link" : "nav-link")) Shop
                            li.nav-item
                                a(href="/products" class=((path === "/products") ? "active nav-link" : "nav-link")) Products
                            li.nav-item
                                a(href="/cart" class=((path === "/cart") ? "active nav-link" : "nav-link")) Products
                            li.nav-item
                                a(href="/admin/add-product" class=((path === "/admin/add-product") ? "active nav-link" : "nav-link")) Add Product
                            li.nav-item
                                a(href="/admin/products" class=((path === "/admin/products") ? "active nav-link" : "nav-link")) Admin 

        block content
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous") 
